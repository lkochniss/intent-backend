<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}int.ent news{% endblock %}</title>
    {% block stylesheets %}
        {% stylesheets
            '../vendor/twitter/bootstrap/dist/css/bootstrap.css'
            'css/content.css'
            'css/sidebar.css'
        filter='cssrewrite' %}
            <link rel="stylesheet" href="{{ asset_url }}"/>
        {% endstylesheets %}
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>
{% block body %}
    <div class="col-lg-12">
        {% block adminbar %}
            {% include'::adminbar.html.twig' %}
        {% endblock %}
    </div>
    <div class="col-md-2">
        {% block sidebar %}
            {% include('::sidebar.html.twig') %}
        {% endblock %}
    </div>
    <div class="col-md-10">
        {% block content %}
        {% endblock %}
    </div>
{% endblock %}
{% block javascripts %}
    {% javascripts
        '../vendor/components/jquery/jquery.js'
        '../vendor/twitter/bootstrap/dist/js/bootstrap.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
</body>
</html>
