{% extends "::list.html.twig" %}

{% block title %}{{ parent() }} {% trans from "studio" %}studio.list{% endtrans %}{% endblock %}

{% block content %}
    <a href="{{ path('intent_backend_studio_create') }}" class="btn btn-default pull-right">{% trans from "studio" %}studio.create{% endtrans %}</a>
    <h3>{% trans from "studio" %}studio.list{% endtrans %}</h3>
    <table class="table" id="entity_list">
        <thead>
        <tr>
            <th>{% trans from "studio" %}studio.name{% endtrans %}</th>
            <th>{% trans from "studio" %}studio.published.by{% endtrans %}</th>
            <th>{% trans from "studio" %}studio.published.at{% endtrans %}</th>
            <th>{% trans from "studio" %}studio.actions{% endtrans %}</th>
        </tr>
        </thead>
        <tbody>
        {% for studio in entities %}
            <tr>
                <td>{{ studio.name }}</td>
                <td></td>
                <td></td>
                <td>
                    <a class="table-padding" href="{{ path('intent_backend_studio_edit',{'id' : studio.id}) }}">
                        <span class="glyphicon glyphicon-pencil"/>
                    </a>
                    <a class="table-padding" href="{{ path('intent_backend_studio_show',{'id' : studio.id}) }}">
                        <span class="glyphicon glyphicon-eye-open"/>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
