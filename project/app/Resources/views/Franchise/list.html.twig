{% extends "::base.html.twig" %}

{% block title %}{{ parent() }} {% trans from "franchise" %}franchise.list{% endtrans %}{% endblock %}

{% block content %}
    <h3>{% trans from "franchise" %}franchise.list{% endtrans %}</h3>
    <a href="{{ path('intent_backend_franchise_create') }}" class="btn btn-default pull-right">{% trans from "franchise" %}franchise.create{% endtrans %}</a>
    <table class="table">
        <thead>
        <tr>
            <td>{% trans from "franchise" %}franchise.name{% endtrans %}</td>
            <td>{% trans from "franchise" %}franchise.actions{% endtrans %}</td>
        </tr>
        </thead>
        <tbody>
        {% for franchise in franchises %}
            <tr>
                <td>{{ franchise.name }}</td>
                <td><a class="table-padding" href="{{ path('intent_backend_franchise_edit',{'id' : franchise.id}) }}"><span class="glyphicon glyphicon-pencil"/></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
