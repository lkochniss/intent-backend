{% extends "::list.html.twig" %}

{% block title %}{{ parent() }} {% trans from "publisher" %}publisher.list{% endtrans %}{% endblock %}

{% block content %}
    <a href="{{ path('intent_backend_publisher_create') }}" class="btn btn-default pull-right">{% trans from "publisher" %}publisher.create{% endtrans %}</a>
    <table class="table">
    <h3>{% trans from "publisher" %}publisher.list{% endtrans %}</h3>
        <thead>
        <tr>
            <th>{% trans from "publisher" %}publisher.name{% endtrans %}</th>
            <th>{% trans from "publisher" %}publisher.actions{% endtrans %}</th>
        </tr>
        </thead>
        <tbody>
        {% for publisher in entities %}
            <tr>
                <td>{{ publisher.name }}</td>
                <td>
                    <a class="table-padding" href="{{ path('intent_backend_publisher_edit',{'id' : publisher.id}) }}">
                        <span class="glyphicon glyphicon-pencil"/>
                    </a>
                    <a class="table-padding" href="{{ path('intent_backend_publisher_show',{'id' : publisher.id}) }}">
                        <span class="glyphicon glyphicon-eye-open"/>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
