{% extends "::base.html.twig" %}

{% block title %}{{ parent() }} {% trans from "publisher" %}publisher.list{% endtrans %}{% endblock %}

{% block content %}
    <h3>{% trans from "publisher" %}publisher.list{% endtrans %}</h3>
    <a href="{{ path('intent_backend_publisher_create') }}" class="btn btn-default pull-right">{% trans from "publisher" %}publisher.create{% endtrans %}</a>
    <table class="table">
        <thead>
        <tr>
            <td>{% trans from "publisher" %}publisher.name{% endtrans %}</td>
            <td>{% trans from "publisher" %}publisher.studio{% endtrans %}</td>
            <td>{% trans from "publisher" %}publisher.franchise{% endtrans %}</td>
            <td>{% trans from "publisher" %}publisher.published.by{% endtrans %}</td>
            <td>{% trans from "publisher" %}publisher.published.at{% endtrans %}</td>
            <td>{% trans from "publisher" %}publisher.actions{% endtrans %}</td>
        </tr>
        </thead>
        <tbody>
        {% for publisher in publishers %}
            <tr>
                <td>{{ publisher.name }}</td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td>
                    <a class="table-padding" href="{{ path('intent_backend_publisher_edit',{'id' : publisher.id}) }}"><span class="glyphicon glyphicon-pencil"/></a>
                    <a class="table-padding" href="{{ path('intent_backend_publisher_show',{'id' : publisher.id}) }}"><span class="glyphicon glyphicon-eye-open"/></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
