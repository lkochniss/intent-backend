{% extends "::base.html.twig" %}

{% block title %}{{ parent() }} {% trans from "page" %}page.list{% endtrans %}{% endblock %}

{% block content %}
    <a href="{{ path('intent_backend_page_create') }}" class="btn btn-default pull-right">{% trans from "page" %}page.create{% endtrans %}</a>
    <h3>{% trans from "page" %}page.list{% endtrans %}</h3>
    <table class="table">
        <thead>
        <tr>
            <th>{% trans from "page" %}page.title{% endtrans %}</th>
            <th>{% trans from "page" %}page.published.at{% endtrans %}</th>
            <th>{% trans from "page" %}page.actions{% endtrans %}</th>
        </tr>
        </thead>
        <tbody>
        {% for page in entities %}
            <tr>
                <td>{{ page.title }}</td>
                <td></td>
                <td>
                    <a class="table-padding" href="{{ path('intent_backend_page_edit',{'id' : page.id}) }}"><span class="glyphicon glyphicon-pencil"/></a>
                    <a class="table-padding" href="{{ path('intent_backend_page_show',{'id' : page.id}) }}"><span class="glyphicon glyphicon-eye-open"/></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
