{% extends "::editor.html.twig" %}

{% block title %}{{ parent() }} {% trans from "game" %}game.edit{% endtrans %}{% endblock %}

{% block content %}
    <h1>{% trans from "game" %}game.edit{% endtrans %}</h1>
    <div class="col-md-9 editor">
        {{ form_row(form.name) }}
        {{ form_row(form.description) }}
    </div>
    <div class="col-md-3 neta">
        {{ form_row(form.studio) }}
        {{ form_row(form.franchise) }}
        {{ form_row(form.submit) }}
    </div>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $('#game_studio').select2();

        $('#game_franchise').select2();
    </script>
{% endblock %}
